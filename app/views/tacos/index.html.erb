<% content_for(:page_title) do %>
Our Glorious Tacos
<% end %>

<div class="page-header">
  <h1>Our Glorious Tacos <small>No Lettuce</small></h1>
</div>

<div class="row">
<% @tacos.each do |taco| %>

  <div id="taco-<%=taco.id%>" class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag taco.photo %>
      <div class="caption">
        <h3><%= taco.name %></h3>
        <p><%= truncate taco.description, length: 200 %></p>
        <p><%= link_to "Add To Cart", add_to_cart_path(taco_id: taco.id), method: :post, class: "btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>
</div>
